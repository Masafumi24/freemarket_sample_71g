= form_with model: @user,local: true do |f|
  .sign-up__main
    .sign-up__main__box
      .sign-up__main__box__contents
        %h1.sign-up-head プロフィール情報編集
      .sign-up__main__box__information
        .sign-up__main__box__information__contents
          .field-label
            = f.label :image, class: "form-image" do
              .box
                -if @user.image.present?
                  =image_tag(@user.image.to_s,class:"image")
                -else
                  =image_tag("/images/material/icon/icon_camera.png",class:"image")
              .text
                イメージの選択
                %span.field-label__any 任意
              =f.file_field :image
          .field-label
            = f.label :ニックネーム, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "field-label__input",placeholder: "例)やまーだ"
          .field-label
            = f.label :メールアドレス, class: "field-label__name"
            %span.field-label__required 必須
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "field-label__input",placeholder: "例)~@~.~"
          .field-label
            = f.label :性（全角）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :last_name, autofocus: true, class: "field-label__input",placeholder: "例)山田"
          .field-label
            = f.label :名（全角）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :first_name, autofocus: true, class: "field-label__input",placeholder: "例)太郎"
          .field-label
            = f.label :せい（全角）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :last_furigana, autofocus: true, class: "field-label__input",placeholder: "例)やまだ"
          .field-label
            = f.label :めい（全角）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :first_furigana, autofocus: true, class: "field-label__input",placeholder: "例)たろう"
          .field-label
            = f.label :電話番号, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :phone_number, autofocus: true, class: "field-label__input",placeholder: "ハイフンなし10~11桁"
          .field-label
            = f.label :性別, class: "field-label__name"
            %span.field-label__required 必須
            = f.select :gender, { '男': :male, '女': :female }
          .field-label
            = f.label :生年月日, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :birthday, autofocus: true, class: "field-label__input",placeholder: "例)2000年1月1日"
          .actions
            = f.submit "編集する", class: "actions__btn"
