.sign-up__header
  .sign-up__header__image
.sign-up__main
  .sign-up__main__box
    = form_for @address do |f|
      = render "devise/shared/error_messages", resource: @address
      .sign-up__main__box__contents
        %h1.sign-up-head 住所登録
      .sign-up__main__box__information
        .sign-up__main__box__information__contents
          .field-label
            = f.label :送付先氏名（性）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :last_name_ad, autofocus: true, class: "field-label__input"
          .field-label
            = f.label :送付先氏名（名）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :first_name_ad, autofocus: true, class: "field-label__input"
          .field-label
            = f.label :ふりがな（性）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :last_furigana_ad, autofocus: true, class: "field-label__input"
          .field-label
            = f.label :ふりがな（名）, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :first_furigana_ad, autofocus: true, class: "field-label__input"
          .field-label
            = f.label :電話番号, class: "field-label__name"
            %span.field-label__any 任意
            = f.text_field :phone_number_ad, autofocus: true, class: "field-label__input"
          .field-label
            = f.label :郵便番号, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :zip, autofocus: true, autocomplete: "zip", class: "field-label__input"
          .field-label
            = f.label :都道府県, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :prefectures, autofocus: true, autocomplete: "prefectures", class: "field-label__input"
          .field-label
            = f.label :市区町村, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :city, autofocus: true, class: "field-label__input"
          .field-label
            = f.label :番地, class: "field-label__name"
            %span.field-label__required 必須
            = f.text_field :street, autofocus: true, class: "field-label__input"
          .field-label
            = f.label :マンション名, class: "field-label__name"
            %span.field-label__any 任意
            = f.text_field :building_name, autofocus: true, class: "field-label__input"
          .actions
            = f.submit "signup",  class: "actions__btn"
.sign-up__footer
  .sign-up__footer__image
